{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/Andreas-UI/FIT3179-Data-Visualization-2/master/ACCIDENT.csv",
        "format": {
            "type": "csv"
        }
    },
    "params": [
        {
            "name": "condition_select",
            "value": [
                "Dry",
                "Clear"
            ],
            "bind": {
                "input": "select",
                "name": "Select One of the Condition: ",
                "options": [
                    [
                        "Dry",
                        "Clear"
                    ],
                    [
                        "Wet",
                        "Clear"
                    ],
                    [
                        "Wet",
                        "Raining"
                    ],
                    [
                        "Dry",
                        "Strong winds"
                    ],
                    [
                        "Dry",
                        "Fog"
                    ]
                ],
                "labels": [
                    "Dry Clear",
                    "Wet Clear",
                    "Wet Raining",
                    "Dry Strong winds",
                    "Dry Fog"
                ]
            }
        }
    ],
    "transform": [
        {
            "lookup": "ACCIDENT_NO",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/Andreas-UI/FIT3179-Data-Visualization-2/master/ROAD_SURFACE_COND.csv",
                    "format": {
                        "type": "csv"
                    }
                },
                "key": "ACCIDENT_NO",
                "fields": [
                    "Surface Cond Desc"
                ]
            }
        },
        {
            "lookup": "ACCIDENT_NO",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/Andreas-UI/FIT3179-Data-Visualization-2/master/ATMOSPHERIC_COND.csv",
                    "format": {
                        "type": "csv"
                    }
                },
                "key": "ACCIDENT_NO",
                "fields": [
                    "Atmosph Cond Desc"
                ]
            }
        },
        {
            "filter": "datum['Atmosph Cond Desc'] == condition_select[1]"
        },
        {
            "filter": "datum['Surface Cond Desc'] == condition_select[0]"
        },
        {
            "aggregate": [
                {
                    "field": "ACCIDENT_NO",
                    "op": "count",
                    "as": "count"
                }
            ],
            "groupby": [
                "Atmosph Cond Desc",
                "Surface Cond Desc",
                "Accident Type Desc",
                "Road Geometry Desc"
            ]
        }
    ],
    "mark": "bar",
    "encoding": {
        "x": {
            "field": "Accident Type Desc",
            "type": "nominal",
            "title": null,
            "sort": "-y",
            "axis": {
                "labelAngle": -45
            }
        },
        "y": {
            "field": "count",
            "type": "quantitative",
            "title": "Number of Accident"
        },
        "color": {
            "field": "Road Geometry Desc",
            "scale": {
                "scheme": "magma"
            }
        },
        "tooltip": [
            {
                "field": "Atmosph Cond Desc",
                "type": "nominal",
                "title": "Atmospheric Condition"
            },
            {
                "field": "Surface Cond Desc",
                "type": "nominal",
                "title": "Road Surface Condition"
            },
            {
                "field": "Road Geometry Desc",
                "type": "nominal",
                "title": "Road Geometry"
            },
            {
                "field": "count",
                "type": "quantitative",
                "title": "Count of accidents"
            }
        ]
    },
    "width": 600,
    "height": 300,
    "title": "Correlation Heatmap by Count of accident_id",
    "config": {
        "legend": {
            "orient": "top-right"
        }
    }
}