{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/Andreas-UI/FIT3179-Data-Visualization-2/master/ATMOSPHERIC_COND.csv",
        "format": {
            "type": "csv"
        }
    },
    "transform": [
        {
            "lookup": "ACCIDENT_NO",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/Andreas-UI/FIT3179-Data-Visualization-2/master/ROAD_SURFACE_COND.csv",
                    "format": {
                        "type": "csv"
                    }
                },
                "key": "ACCIDENT_NO",
                "fields": [
                    "Surface Cond Desc"
                ]
            }
        },
        {
            "aggregate": [
                {
                    "op": "count",
                    "field": "ACCIDENT_NO",
                    "as": "count"
                }
            ],
            "groupby": [
                "Atmosph Cond Desc",
                "Surface Cond Desc"
            ]
        }
    ],
    "layer": [
        {
            "mark": "rect",
            "encoding": {
                "x": {
                    "field": "Surface Cond Desc",
                    "title": "Road Surface Condition"
                },
                "y": {
                    "field": "Atmosph Cond Desc",
                    "title": "Atmospheric Condition"
                },
                "color": {
                    "field": "count",
                    "type": "quantitative",
                    "title": "Count of accidents",
                    "scale": {
                        "scheme": "goldred"
                    }
                },
                "tooltip": [
                    {
                        "field": "count",
                        "type": "quantitative",
                        "title": "Count of accidents"
                    },
                    {
                        "field": "Atmosph Cond Desc",
                        "type": "nominal",
                        "title": "Atmospheric Condition"
                    },
                    {
                        "field": "Surface Cond Desc",
                        "type": "nominal",
                        "title": "Road Surface Condition"
                    }
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "baseline": "middle",
                "align": "center"
            },
            "encoding": {
                "x": {
                    "field": "Surface Cond Desc",
                    "title": "Road Surface Condition",
                    "axis": {
                        "labelAngle": 360,
                        "labelAlign": "center",
                        "labelBaseline": "top"
                    }
                },
                "y": {
                    "field": "Atmosph Cond Desc",
                    "title": "Atmospheric Condition"
                },
                "text": {
                    "field": "count",
                    "type": "quantitative"
                },
                "color": {
                    "condition": {
                        "test": "datum.count < 40000",
                        "value": "black"
                    },
                    "value": "white"
                }
            }
        }
    ],
    "width": 600,
    "height": 300,
    "title": "Correlation Heatmap by Count of accident_id",
    "config": {
        "legend": {
            "orient": "top"
        }
    }
}